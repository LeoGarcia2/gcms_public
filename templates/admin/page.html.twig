{% extends 'admin/layout.html.twig' %}

{% block gcms_page %}

	<h1>Data in {{ pageName }}</h1>

	{% for name, field in entity %}

	{% if field.timestamp is defined %}
	    {% set field = field|date('m/d/Y') %}
	{% endif %}
	{% if 'File' in name %}
		{% set path = name[:-4] %}
		{% set url = entity[path] %}

		<section><b>{{ name }}</b> : <img width="200" src="/assets/images/{{ url }}"/></section>
		
		{% else %}

		<section><b>{{ name }}</b> : {{ field }}</section>

	{% endif %}

	

	{% endfor %}

{% endblock %}
